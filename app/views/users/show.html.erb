<%provide :title, @user.name%>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <p><%= t "information.user_info.name", name: @user.name %></p>
        <p><%= t "information.user_info.email", email: @user.email %></p>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @microposts.any? %>
      <h3><%= t "activerecord.models.micropost"%> (<%= @microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%== pagy_bootstrap_nav @page %>
    <% end %>
  </div>
</div>
