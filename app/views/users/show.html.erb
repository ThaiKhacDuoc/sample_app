<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <p><%= t "information.user_info.name", name: @user.name %></p>
        <p><%= t "information.user_info.email", email: @user.email %></p>
      </h1>
    </section>
  </aside>
</div>
