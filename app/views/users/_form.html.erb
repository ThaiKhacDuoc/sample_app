<%= form_for @user do |f| %>
  <%= render "shared/error_messages" , object: f.object%>
  <%= f.label :name, t("information.edit.name")  %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email, t("information.edit.email")  %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :password, t("information.edit.password")  %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t("information.edit.password_confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.submit yield(:title), class: "btn btn-primary" %>
<% end %>
